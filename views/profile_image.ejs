<%- include("templates/header") %>
<script type="text/javascript"> 
    $.cloudinary.config({ cloud_name: '<%= process.env.CLOUDINARY_CLOUD_NAME %>', secure: true});
</script>

<div class="user-info">
    <h1><%= username %></h1>
</div>

<div class="option-btns">
    <div class="action-btns">
        <form action="/profile/links" method="get">
            <button>Links</button>
        </form>
        <form action="/profile/images" method="get">
            <button>Images</button>
        </form>
        <form action="/profile/text" method="get">
            <button>Text</button>
        </form>
    </div>
</div>
<div class="option-btns">
    <div class="upload-btn">
        <form action="/profile/upload" method="get">
            <button>Upload</button>
        </form>
    </div>
</div>


<div class="profile-divider"></div>

<br>

<div class="home-table">
    <div class="table-info">
        <table>
            <tr>
                <th class="number">#</th>
                <th>URL</th>
                <th>Short URL</th>
                <th>Hits</th>
                <th>Active</th>
                <th>Created</th>
                <th>Last Hit</th>
            </tr>
            <tr>
                <td>1</td>
                <td>https://url.com/hello/picture/link</td>
                <td>https://url.com</td>
                <td>5</td>
                <td><input type="checkbox"></td>
                <td>August 21</td>
                <td>August 22</td>
            </tr>
        </table>
    </div>
</div>

<script>
    const fileInput = document.querySelector('#picture-upload input[type=file]');
    fileInput.onchange = () => {
      if (fileInput.files.length > 0) {
        const fileName = document.querySelector('#picture-upload .file-name');
        fileName.textContent = fileInput.files[0].name;
      }
    }
</script>

<%- include("templates/footer") %>