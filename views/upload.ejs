<%- include("templates/header") %>

<div class="home-title">
    <h1>Upload</h1>
</div>

<div class="profile-divider"></div>

<br>

<form action="/profile/upload/link" method="post" class="link">
    <h3>Upload a link</h3>
    <label for="long_url" class="sr-only">Url</label>
    <input required placeholder="Paste Full Link Here" type="url" name="long_url" id="long_url" class="long_url">
    <button class="btn btn-success" type="submit">Save Link</button>
</form>

<br>

<form action="/profile/upload/image" method="post" enctype="multipart/form-data" class="image">
    <h3>Upload an image</h3>
    <div class="file-button">
        <label>
            <input class="file-input" type="file" name="image"/>
        </label>
    </div>
    &nbsp;
    <div>
        <button type="submit">Upload
            <span><i class="fas fa-image"></i></span>
        </button>
    </div>

</form>

<br>

<form action="/profile/upload/text" method="post" class="text">
    <h3>Upload some text</h3>
    <label for="text" class="sr-only">Text</label>
    <textarea required placeholder="Enter Text Here" name="desc" id="desc" cols="30" rows="10" class="text-area"></textarea>
    <button class="btn btn-success" type="submit">Save Text</button>
</form>

<%- include("templates/footer") %>