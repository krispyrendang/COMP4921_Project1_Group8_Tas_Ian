<%- include('templates/header'); -%> 
<div class="container" style="width: 400px; margin-left: auto; margin-right: auto;">   
    <div id="loginbox" style="margin-top:50px;">                   
        <div class="panel panel-info" style="border: 2px solid #caf0f8; border-radius: 5px;">
            <div class="panel-heading" style="background-color: #caf0f8; padding: 7px; opacity: 75%;">
                <div class="panel-title" style="padding-left: 10px; color: #023e8a;">Sign Up</div>
                <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="login">Sign In</a></div>
            </div>    
            <div class="panel-body" style="padding-top:20px" >
                <form method="post" action="/submitUser">
                    <div style="margin-bottom: 15px" class="input-group">
                        <input id="login-username" type="username" class="form-control" name="username" placeholder="username" style="width: 90%; margin: auto; display: block;">
                    </div>
                    <div style="margin-bottom: 15px" class="input-group">
                        <input id="login-email" type="email" class="form-control" name="email" placeholder="email" style="width: 90%; margin: auto; display: block;">
                    </div>
                    <div style="margin-bottom: 15px" class="input-group">
                        <input id="login-password" type="password" class="form-control" name="password" placeholder="password" style="width: 90%; margin: auto; display: block;">
                    </div>

                    <% if (missing == "username") { %>
                        <div style="padding-left: 15px; font-size:85%;">Please enter a username (required)</div> 
                    <% } %>

                    <% if (missing == "email") { %>
                        <div style="padding-left: 15px; font-size:85%;">Please enter a email (required)</div> 
                    <% } %>

                    <% if (missing == "password") { %>
                        <div style="padding-left: 15px; font-size:85%;">Please enter a password (required)</div> 
                    <% } %>

                    <div style="margin-top:15px" class="form-group">						
                        <button id="btn-login" type="submit" class="btn btn-success" style="margin-left: 15px; margin-bottom: 15px; background-color: #0077b6; color: white; cursor: pointer; border: none; text-decoration: none; padding: 5px 12px; border-radius: 3px;">Sign Up</button>
                    </div>
                </form>
            </div>                    
        </div> 
    </div>
</div>
<%- include('templates/footer'); -%>