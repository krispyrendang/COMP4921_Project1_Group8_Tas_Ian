<div class="index-page">
    <div class="title">
        <img class="index-logo" src="/photos/logo.png" alt="logo">
    </div>

    <br>

    <div class="index-btn">
        <form action='/signup' method='get'>
            <button class="btn-index-signup">Sign up</button>
        </form>
        <form action='/login' method='get'>
            <button class="btn-index-login">Log in</button>
        </form>
    </div>
</div>
